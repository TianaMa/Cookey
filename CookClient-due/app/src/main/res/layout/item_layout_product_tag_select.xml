<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="tag"
            type="com.demo.cook.ui.product.model.data.ProductTag" />

    </data>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:button="@null"
        android:layout_margin="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@{tag.tagName}"
        android:textSize="15sp"
        android:checked="@{tag.selected}"
        android:background="@drawable/shape_corners_15"
        android:backgroundTint="@color/color_selector_org_gray_tag"
        android:textColor="@android:color/white"
        tools:text="Afternoon tea"/>

</layout>