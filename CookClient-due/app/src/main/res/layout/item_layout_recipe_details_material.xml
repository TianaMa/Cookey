<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="material"
            type="com.demo.cook.ui.recipe.model.data.RecipeMaterial" />


        <import type="android.view.View"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/shape_dash_under_line">


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            tools:text="@string/text_publish_recipe_material_example"
            android:textSize="16sp"
            android:text="@{material.materialName}"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            tools:text="@string/text_publish_recipe_dosage_example"
            android:textSize="16sp"
            android:text="@{material.dosage}"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>